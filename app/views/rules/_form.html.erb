<%= form_for @rule, remote: true do |f| %>
	<div class="modal-body">
		<div class="row">
			<div class="col-sm-12">
				<div class="form-group">
					<label for="">Search Text</label>
					<%= f.text_field :search_text, class: 'form-control' %>
				</div>
			</div>
			<div class="col-sm-12">
				<div class="form-group">
					<label for="">Description Builder</label>
					<%= f.text_field :display_text, class: 'form-control' %>
				</div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label for="">Component Type</label>
					<%= f.collection_select(:type_id, @types, :id, :name, {prompt: true}, class: 'form-control') %>
				</div>
			</div>
			<!-- <div class="col-sm-12">
				<div class="form-group">
					<label for="">What it's going to look like</label>
					<p class="form-control-static">100,0 Bolt Up</p>
				</div>
			</div> -->
		</div>
	</div>
	<div class="modal-footer">
        <%= f.submit 'Save Rule', class: 'btn btn-primary' %>
    </div>
<% end %>