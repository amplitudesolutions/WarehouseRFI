<div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add New Spool</h4>
      </div>
      <%= form_for @material, url: requisition_spools_path(@isometric_number), method: :post, remote: true do |f| %>
			<div class="modal-body">				
				<div class="form-group">
					<label for="">Description</label>
					<%= f.text_field :designation, class: 'form-control' %>
					<!-- <input type="text" class="form-control" id="spoolDescription"> -->
				</div>
				<div class="form-group">
					<label for="">Drawing</label>
					<%= f.collection_select(:spool, @sheets, :spool, :drawing, { prompt: true} , :class => "form-control") %>
				</div>
			</div>
			<div class="modal-footer">
				<%= f.submit 'Add', class: 'btn btn-primary' %>
			</div>

		<% end %>
    </div>
</div>