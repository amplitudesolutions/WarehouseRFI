<div class="modal-dialog modal-sm">
    <div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 class="modal-title" id="myModalLabel">Delete Spool</h4>
		</div>
		<div class="modal-body">
			<ul class="errors"></ul>
			Are you sure you want to delete <b><%= @material.designation %></b>?
		</div>	
     	<div class="modal-footer">
  		  <%= link_to "No", "#", class: "btn btn-primary", data: { dismiss: "modal" } %>
  		  <%= link_to "Yes", requisition_spool_path(@material.isometric_number, @material), method: :delete, remote: true, class: "btn btn-danger" %>
		</div>
	</div>
</div>
